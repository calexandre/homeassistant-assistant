# .editorconfig
# Top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# YAML (Home Assistant configs: automations, sensors, packages)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# Python (scripts, tooling)
[*.py]
indent_style = space
indent_size = 2
max_line_length = 88

# JavaScript / TypeScript (dashboards, tools)
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# Markdown (docs, prompts, chatmodes)
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON / JSONC (configs, schemas)
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles (tabs required by make)
[{Makefile,makefile,*.mk}]
indent_style = tab

# Dockerfiles
[{Dockerfile,**/Dockerfile*}]
indent_style = space
indent_size = 2
